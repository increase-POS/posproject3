<Window x:Class="AdministratorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdministratorApp"
        mc:Ignorable="d" Icon="/pic/increaseLogo.ico"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow"   Loaded="Window_Loaded"  
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"  WindowStyle="None"
        WindowState="Maximized" d:DesignWidth="1200" d:DesignHeight="800"   >
    <Grid Margin="0" x:Name="grid_mainWindow" >
        <Grid Background="#E8E8E8"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="grid"  HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0"  
              Background="White" RenderTransformOrigin="0.5,0.5" >
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid Margin="0,0,0,0"  HorizontalAlignment="Left" >
                    <!--<ColorAnimation Duration="0:0:0.3" To="#35B5FF" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle"/>-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>


                    <Border  x:Name="bdr_mainImage" Margin="35,25,35,35"
                             Width="auto" Height="100"
                             FlowDirection="LeftToRight" >
                        <Border.Background>
                            <ImageBrush x:Name="img_mainLogo"  Stretch="Uniform"  ImageSource="/pic/increase-logo.png"/>
                        </Border.Background>
                    </Border>


                    <Rectangle Fill="{StaticResource MainColor}"  Width="7.5" Margin="0,5"  
                       Grid.Row="2" Tag="home"     HorizontalAlignment="Left" x:Name="path_openHome"/>
                    <Button  Width="200" Height="50" Grid.Row="2"
                         HorizontalAlignment="Left"  Tag="home"
                 x:Name="BTN_home" Click="BTN_home_Click"
                    Background="{x:Null}" BorderBrush="{x:Null}"   
                    Padding="0" >
                        <Button.ToolTip>
                            <ToolTip Content="Home"  Visibility="Visible" x:Name="tt_home"/>
                        </Button.ToolTip>
                        <Grid Width="200" Height="50" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Fill="{StaticResource MainColor}" x:Name="path_iconHome" Stretch="Fill"  
                              HorizontalAlignment="Left" Grid.Column="0"  
