	c-2.7,0-4.9,0.9-6.6,2.6c-1.7,1.7-2.6,3.9-2.6,6.6v55.7l-69.7-58.2c-6.1-4.9-13.3-7.4-21.7-7.4c-8.4,0-15.6,2.5-21.7,7.4L3.2,225.4
	C1.3,227,0.2,229,0,231.6c-0.2,2.6,0.5,4.8,2,6.7l17.7,21.1c1.5,1.7,3.5,2.8,6,3.1c2.3,0.2,4.6-0.5,6.9-2L230.1,95.8l197.6,164.7
	c1.5,1.3,3.5,2,6,2h0.9c2.5-0.4,4.5-1.4,6-3.1l17.7-21.1c1.5-1.9,2.2-4.1,2-6.7C460.1,229,459,227,457.1,225.4z" Margin="27.5,15,0,15"/>
                            <TextBlock Text="Home" Foreground="{StaticResource MainColor}" x:Name="txt_home"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                              Grid.Column="1"  Tag="home"     Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                    <Rectangle Fill="{StaticResource MainColor}"  Width="7.5" Margin="0,5"  
                           Grid.Row="3"  Tag="settings"  Visibility="Collapsed"   HorizontalAlignment="Left" x:Name="path_openSettings"/>
                    <Button  Width="200" Height="50" Grid.Row="3" HorizontalAlignment="Left"
                    Background="{x:Null}" BorderBrush="{x:Null}"    Tag="settings"
                    Padding="0" x:Name="btn_settings" Click="Btn_settings_Click"  >
                        <Button.ToolTip>
                            <ToolTip Content="Settings" x:Name="tt_settings" Visibility="Visible" />
                        </Button.ToolTip>
                        <Grid Width="200" Height="50" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Fill="{StaticResource LightGrey}" x:Name="path_iconSettings" Stretch="Fill"  
                              HorizontalAlignment="Center" Grid.Column="0"   Tag="settings" 
                         VerticalAlignment="Center" Width="20" Height="20"
                              Data="M55.8,35.5v-6.8L50,26.8c-0.3-1.3-0.9-2.5-1.5-3.7l2.8-5.5l-4.8-4.8L41,15.6c-1.2-0.6-2.4-1.1-3.7-1.5l-1.9-5.8h-6.8
